
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING
  COMPLETED
  CANCELLED
}

enum MatchStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Match {
  id        String      @id @default(cuid())
  team1     String      
  team2     String      
  status    MatchStatus @default(PENDING)
  createdAt DateTime    @default(now())
}

model Matchmaking {
  id              String   @id @default(cuid())
  teamCode        String
  discordId       String   @unique
  status          Status   @default(PENDING)
  createdAt       DateTime @default(now())
}

model Player {
  id           String   @id @default(cuid())
  brawlStarsId String
  discordId    String
  createdAt    DateTime @default(now())
}

